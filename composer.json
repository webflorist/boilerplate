{
    "name": "webflorist/boilerplate",
    "description": "Blueprint for a Laravel (5.8+) package.",
    "authors": [
        {
            "name": "Gerald Buttinger",
            "email": "gerald@code.florist"
        }
    ],
    "require": {
        "php": "~7.1",
		"laravel/framework": "~5.8"
	},
    "require-dev": {
        "orchestra/testbench": "~3.8"
    },
    "autoload": {
        "psr-4": {
            "Webflorist\\Boilerplate\\": "src/",
            "BoilerplateTests\\": "tests/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webflorist\\Boilerplate\\BoilerplateServiceProvider"
            ],
            "aliases": {
                "Boilerplate": "Webflorist\\Boilerplate\\BoilerplateFacade"
            }
        }
    }
}
